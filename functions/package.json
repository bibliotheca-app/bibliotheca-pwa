{
  "name": "functions",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "prettier": "prettier --config ./prettier.config.js",
    "_prettier": "npm run prettier -- *.js \"src/**/*.ts\"",
    "prettier-format": "npm run _prettier -- --write",
    "eslint": "eslint *.js \"src/**/*.ts\"",
    "eslint-fix": "npm run eslint -- --fix",
    "format": "run-s prettier-format eslint-fix",
    "format-check": "run-p eslint",
    "deploy": "firebase deploy --only functions",
    "deploy-with-token": "yarn deploy --token $FIREBASE_TOKEN"
  },
  "main": "lib/index.js",
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
