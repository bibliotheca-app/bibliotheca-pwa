{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "target": "es5",
    "types": [
      "webpack-env",
      "jest"
    ]
  },
  "extends": "../tsconfig.base.json",
  "include": [
    "src",
    "../shared/typings/browser/**/*"
  ],
  "references": [
    {
      "path": "../shared/tsconfig.browser.json"
    }
  ]
}
